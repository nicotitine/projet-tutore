<scxml xmlns="http://www.w3.org/2005/07/scxml"
	version="1.0"
	name="history"
	initial="a">
	<state id="a">
		<transition event="a to b" target="b" />
	</state>
	<state id="b" initial="ba">
		<history type="deep" />
		<transition event="b to a" target="a" />
		<state id="ba">
			<transition event="ba to bb" target="bb" />
		</state>
		<state id="bb">
		</state>
	</state>
</scxml>
